{
  "name": "customrpc",
  "version": "0.0.5",
  "description": "Allows you to set your own custom Rich Presence on Discord.",
  "main": "src/main.js",
  "scripts": {
    "test": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "publish": "build -p always"
  },
  "build": {
    "appId": "com.jasonhaxstuff.custom.discord.rpc",
    "productName": "Custom Discord RPC",
    "copyright": "Copyright Â© 2018 JasonHaxStuff",
    "icon": "macho",
    "files": [
      "**/*",
      "build/macho.*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [{
      "provider": "github",
      "owner": "jasonhaxstuff",
      "repo": "custom-discord-rpc",
      "private": false
    }]
  },
  "repository": {
    "url": "https://github.com/jasonhaxstuff/custom-discord-rpc"
  },
  "author": "jasonhaxstuff",
  "license": "GPL-3.0",
  "dependencies": {
    "discord-rpc": "^3.0.0",
    "electron-updater": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "register-scheme": "0.0.2"
  }
}
